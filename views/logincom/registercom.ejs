<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Company Registration | Campus Connect</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <style>
    body {
      background: #fff;
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
    }

    /* Header */
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 60px;
      background: transparent;
      box-shadow: 0 4px 15px rgba(0,0,0,0.05);
      animation: fadeInDown 1s ease;
    }
    .logo {
      display: flex;
      align-items: center;
      font-size: 1.8rem;
      font-weight: bold;
      color: black;
    }
    .logo svg {
      stroke-dasharray: 300;
      stroke-dashoffset: 300;
      animation: drawLogo 5s ease-in-out infinite;
    }
    .logo-text {
      margin-left: 10px;
      background: linear-gradient(to right, black);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      font-weight: bold;
      animation: fadeLoop 25s ease-in-out infinite;
    }
    nav ul {
      list-style: none;
      display: flex;
      gap: 15px;
      margin: 0;
      padding: 0;
    }
    nav ul li a {
      display: inline-block;
      color: black;
      padding: 8px 16px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    nav ul li a:hover {
      background: #333;
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    }

    /* Container */
    .register-container {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px 20px;
    }

    .register-box {
      display: flex;
      background: #fff;
      width: 100%;
      max-width: 1000px;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
      animation: fadeInUp 0.8s;
    }

    /* Left image section */
    .register-image {
      flex: 1;
      background: url('https://i.pinimg.com/1200x/41/3f/b7/413fb7c63cccaf1aa43dc5ed076a8646.jpg') no-repeat center center/cover;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 20px;
      color: white;
      position: relative;
      overflow: hidden;
    }
    .register-image::before {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.6) 100%);
      z-index: 0;
    }
    .dream-heading, .author {
      position: relative;
      z-index: 1;
    }
    .dream-heading h4 {
      display: flex;
      flex-direction: column;
      gap: 5px;
      margin: 30px 0 0 0;
      line-height: 1.3;
    }
    .dream-text {
      font-size: 2rem;
      font-weight: 700;
      color: white;
      text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
      letter-spacing: 1px;
      position: relative;
      display: inline-block;
    }
    .dream-text::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 60%;
      height: 3px;
      background: linear-gradient(to right, #4facfe, #00f2fe);
      border-radius: 3px;
    }
    .jobs-text {
      font-size: 1.8rem;
      font-weight: 600;
      background: linear-gradient(to right, #fff, #f8f9fa);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      letter-spacing: 0.5px;
      padding: 5px 0;
      animation: pulse 2s infinite alternate;
    }
    @keyframes pulse {
      0% { transform: scale(1); text-shadow: 0 0 5px rgba(255,255,255,0.3); }
      100% { transform: scale(1.03); text-shadow: 0 0 15px rgba(255,255,255,0.6); }
    }

    /* Right form section */
    .register-form {
      flex: 1;
      padding: 50px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    .register-form h2 {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 10px;
    }
    .register-form p {
      color: #666;
      margin-bottom: 25px;
    }
    .form-control {
      border-radius: 10px;
      margin-bottom: 15px;
    }
    .btn-primary {
      background: linear-gradient(to right, #4facfe, #00f2fe);
      border: none;
      border-radius: 10px;
      padding: 10px;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(79, 172, 254, 0.4);
    }

    .footer {
      background-color: rgba(255,255,255,0.9);
      padding: 15px 0;
      text-align: center;
      font-size: 0.9rem;
      color: #666;
    }

    @media (max-width: 768px) {
      .register-box { flex-direction: column; }
      .register-image { height: 200px; }
      header { flex-direction: column; align-items: flex-start; }
      nav ul { flex-wrap: wrap; gap: 10px; }
    }

    /* Animations */
    @keyframes drawLogo { 0%{stroke-dashoffset:300;}40%{stroke-dashoffset:0;}60%{stroke-dashoffset:0;}100%{stroke-dashoffset:300;} }
    @keyframes fadeLoop { 0%{opacity:0;transform:translateY(-5px);}40%{opacity:1;transform:translateY(0);}60%{opacity:1;}100%{opacity:0;transform:translateY(-5px);} }
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes fadeInDown { from { opacity: 0; transform: translateY(-30px); } to { opacity: 1; transform: translateY(0); } }
  </style>
</head>
<body>

  <!-- Animated Header -->
  <header>
    <div class="logo">
      <svg class="logo-drawing" width="40" height="40" viewBox="0 0 100 100" fill="none">
        <path d="M10 80 L50 20 L90 80 Z" stroke="black" stroke-width="5" fill="transparent"/>
      </svg>
      <span class="logo-text">Connect</span>
    </div>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/company/re">Register</a></li>
        <li><a href="/company/log">Login</a></li>
      </ul>
    </nav>
  </header>

  <!-- Registration Section -->
  <div class="register-container">
    <div class="register-box">
      <!-- Left image section -->
      <div class="register-image">
        <div class="dream-heading">
          <h4>
            <span class="dream-text">Find your Dream</span>
            <span class="jobs-text">Internships & Jobs</span>
          </h4>
        </div>
        <div class="author">
          <img src="https://i.pinimg.com/1200x/41/3f/b7/413fb7c63cccaf1aa43dc5ed076a8646.jpg" alt="profile">
          <div><strong></strong><br><span></span></div>
        </div>
      </div>

      <!-- Right form section -->
      <div class="register-form">
        <h2>Company Registration</h2>
        <p>Join Campus Connect</p>
        <form action="/company/register" method="POST">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Company Name</label>
              <input type="text" name="companyName" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Website</label>
              <input type="url" name="companyWebsite" class="form-control">
            </div>
            <div class="col-12">
              <label class="form-label">Description</label>
              <textarea name="companyDescription" class="form-control" required></textarea>
            </div>
            <div class="col-md-6">
              <label class="form-label">Industry</label>
              <input type="text" name="industry" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Type (Job / Internship)</label>
              <input type="text" name="type" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Contact Person</label>
              <input type="text" name="contactPerson" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Contact Position</label>
              <input type="text" name="contactPosition" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Email (Unique)</label>
              <input type="email" name="email" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Password</label>
              <input type="password" name="password" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Street Address</label>
              <input type="text" name="streetAddress" class="form-control" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">City</label>
              <input type="text" name="city" class="form-control" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">State</label>
              <input type="text" name="state" class="form-control" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">Postal Code</label>
              <input type="text" name="postalCode" class="form-control" required>
            </div>
            <div class="col-12">
              <label class="form-label">Country</label>
              <input type="text" name="country" class="form-control" required>
            </div>
          </div>
          <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-paper-plane me-2"></i> Register Company
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer animate__animated animate__fadeInUp animate__delay-1s">
    <div class="container">
      <p class="mb-0">&copy; 2025 Campus Connect. All rights reserved.</p>
    </div>
  </footer>

  <!-- Font Awesome & Bootstrap JS -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
