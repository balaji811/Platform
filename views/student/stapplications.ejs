<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Applications</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --primary: #4361ee;
      --secondary: #3a0ca3;
      --accent: #4cc9f0;
      --light: #f8f9fa;
      --dark: #212529;
      --transition: all 0.3s ease;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Poppins', sans-serif;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      background: #f5f7fa;
      color: var(--dark);
    }

    /* ===== Header ===== */
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px 24px;
      background: white;
      box-shadow: 0 4px 15px rgba(0,0,0,0.05);
      animation: fadeInDown 1s ease;
      z-index: 1000;
    }
    header .logo { display: flex; align-items: center; font-size: 1.5rem; font-weight: bold; color: black; }
    header .logo svg { stroke-dasharray: 300; stroke-dashoffset: 300; animation: drawLogo 5s ease-in-out infinite; }
    header .logo-text {
      margin-left: 8px;
      background: linear-gradient(to right, black, #444);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      font-weight: bold;
      animation: fadeLoop 25s ease-in-out infinite;
    }
    header nav ul { list-style: none; display: flex; gap: 12px; }
    header nav ul li a {
      color: black;
      padding: 6px 12px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 500;
      transition: var(--transition);
    }
    header nav ul li a:hover {
      background: #333;
      color: #fff;
      transform: translateY(-2px);
    }

    /* ===== Layout ===== */
    .layout { display: flex; flex: 1; min-height: calc(100vh - 60px); }

    /* ===== Sidebar ===== */
    .sidebar {
      width: 240px;
      background: white;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      box-shadow: 0 0 15px rgba(0,0,0,0.08);
    }
    .nav-section { margin-bottom: 20px; }
    .nav-section h4 {
      font-size: 13px;
      text-transform: uppercase;
      color: #888;
      margin-bottom: 12px;
      letter-spacing: 0.5px;
    }
    .nav-item {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 14px;
      border-radius: 6px;
      color: #444;
      text-decoration: none;
      margin-bottom: 6px;
      transition: all 0.2s;
      font-size: 14px;
    }
    .nav-item:hover { background: #f0f5ff; color: #2255dd; }
    .nav-item.active { background: #2255dd; color: white; }

    .profile {
      margin-top: auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
      background: #f9fafc;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,.1);
      font-size: 14px;
    }
    .profile-info { display: flex; align-items: center; }
    .profile-info img { width: 38px; height: 38px; border-radius: 50%; margin-right: 8px; }
    .profile .fa-bell { font-size: 16px; color: #FFD700; animation: fadeLoop 3s infinite; }

    /* ===== Main Content ===== */
    main {
      flex: 1;
      padding: 30px;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      overflow-y: auto;
    }
    .applications-container {
      max-width: 1000px;
      margin: auto;
      background: #fff;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      animation: fadeInUp 1s ease;
    }
    h2 { text-align: center; margin-bottom: 20px; font-weight: 600; color: #2c3e50; }

    /* ===== Animations ===== */
    @keyframes drawLogo {
      0% { stroke-dashoffset: 300; }
      40% { stroke-dashoffset: 0; }
      60% { stroke-dashoffset: 0; }
      100% { stroke-dashoffset: 300; }
    }
    @keyframes fadeLoop {
      0% { opacity: 0; transform: translateY(-5px); }
      40% { opacity: 1; transform: translateY(0); }
      60% { opacity: 1; }
      100% { opacity: 0; transform: translateY(-5px); }
    }
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>

  <!-- ===== Header ===== -->
  <header>
    <div class="logo">
      <svg class="logo-drawing" width="30" height="30" viewBox="0 0 100 100" fill="none">
        <path d="M10 80 L50 20 L90 80 Z" stroke="black" stroke-width="5" fill="transparent"/>
      </svg>
      <span class="logo-text">Connect</span>
    </div>
    <nav>
      <ul>
             <li><a href="/">Home</a></li>
      
       <li><a href="/student/logout">Log Out</a></li>
      </ul>
    </nav>
  </header>

  <div class="layout">
    <!-- ===== Sidebar ===== -->
    <aside class="sidebar">
      <div class="nav-section">
        <h4>Navigation</h4>
            <a href=" /student/mainpage" class="nav-item "><i class="fa fa-home"></i> Dashboard</a>
    <a href="/dashboard" class="nav-item"><i class="fa fa-briefcase"></i> Recommendations</a>
    <a href="/student/resume" class="nav-item"><i class="fa fa-file"></i> Resume</a>
      </div>

      <div class="nav-section">
        <h4>Applications</h4>
        <a href="/student/applications" class="nav-item active"><i class="fa fa-paper-plane"></i> My Applications</a>
         <a href="/student/chats" class="nav-item "><i class="fa fa-comments"></i> Chats</a>
      </div>

     
    </aside>

    <!-- ===== Main Applications Page ===== -->
    <main>
      <div class="applications-container">
        <h2>My Applications</h2>

        <% if (applications.length === 0) { %>
          <div class="alert alert-info text-center">You have not applied to any jobs yet.</div>
        <% } else { %>
          <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-dark">
              <tr>
                <th>Job Title</th>
                <th>Company</th>
                <th>Type</th>
                <th>Applied At</th>
                <th>Resume Used</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% applications.forEach(app => { %>
                <tr>
                  <td><%= app.job_title %></td>
                  <td><%= app.company_name %></td>
                  <td><%= app.opportunity_type %></td>
                  <td><%= new Date(app.applied_at).toLocaleString() %></td>
                  <td>
                    <strong><%= app.resume_name %></strong><br>
                    <small><%= app.resume_email %></small>
                  </td>
                  <td>
                    <% if (app.status === "accepted") { %>
                      <span class="badge bg-success">Accepted</span>
                    <% } else if (app.status === "rejected") { %>
                      <span class="badge bg-danger">Rejected</span>
                    <% } else { %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </main>
  </div>

</body>
</html>
