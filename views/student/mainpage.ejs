<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Job Portal | Connect</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
    :root {
      --primary: #4361ee;
      --secondary: #3a0ca3;
      --light: #f8f9fa;
      --dark: #212529;
      --transition: all 0.3s ease;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      background: #f5f7fa;
      display: flex;
      flex-direction: column;
    }

    /* ===== HEADER ===== */
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px 24px;
      background: white;
      box-shadow: 0 4px 15px rgba(0,0,0,0.05);
      animation: fadeInDown 1s ease;
    }

    .logo {
      display: flex;
      align-items: center;
      font-size: 1.5rem;
      font-weight: bold;
    }

    .logo svg {
      stroke-dasharray: 300;
      stroke-dashoffset: 300;
      animation: drawLogo 5s infinite;
    }

    .logo-text {
      margin-left: 8px;
      background: linear-gradient(to right, black, #444);
      -webkit-background-clip: text;
      color: transparent;
    }

    nav ul {
      list-style: none;
      display: flex;
      gap: 12px;
    }

    nav ul li a {
      text-decoration: none;
      color: black;
      padding: 6px 12px;
      border-radius: 6px;
      transition: var(--transition);
    }

    nav ul li a:hover {
      background: #000;
      color: #fff;
    }

    /* ===== LAYOUT ===== */
    .layout {
      display: flex;
      flex: 1;
    }

    /* ===== SIDEBAR ===== */
    .sidebar {
      width: 240px;
      background: white;
      padding: 20px;
      display: flex;
      flex-direction: column;
      box-shadow: 0 0 15px rgba(0,0,0,0.08);
    }

    .nav-section {
      margin-bottom: 20px;
    }

    .nav-section h4 {
      font-size: 13px;
      color: #888;
      margin-bottom: 12px;
      text-transform: uppercase;
    }

    .nav-item {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 14px;
      margin-bottom: 6px;
      border-radius: 6px;
      text-decoration: none;
      color: #444;
      transition: var(--transition);
    }

    .nav-item:hover {
      background: #f0f5ff;
      color: var(--primary);
    }

    .nav-item.active {
      background: var(--primary);
      color: white;
    }

    .profile {
      margin-top: auto;
      padding: 10px;
      background: #f9fafc;
      border-radius: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .profile-info {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .profile-info img {
      width: 36px;
      height: 36px;
      border-radius: 50%;
    }

    .fa-bell {
      color: gold;
      animation: bell 2s infinite;
    }

    /* ===== MAIN CONTENT ===== */
    .main-content {
      flex: 1;
      padding: 25px;
      overflow-y: auto;
      animation: fadeInUp 1s ease;
    }

    .welcome-banner {
      background: linear-gradient(135deg, #4361ee, #3a0ca3);
      color: white;
      padding: 25px;
      border-radius: 14px;
      margin-bottom: 25px;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 25px;
    }

    .stat-card {
      background: white;
      padding: 20px;
      border-radius: 14px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    /* ===== HORIZONTAL JOB / INTERNSHIP CARDS ===== */
.jobs-container {
  display: flex;
  gap: 20px;
  overflow-x: auto;
  padding-bottom: 10px;
  scroll-behavior: smooth;
}

.jobs-container::-webkit-scrollbar {
  height: 8px;
}

.jobs-container::-webkit-scrollbar-thumb {
  background: #4361ee;
  border-radius: 10px;
}

.jobs-container::-webkit-scrollbar-track {
  background: #f0f0f0;
}

.job-card {
  flex: 0 0 300px; /* Fixed width cards for horizontal layout */
  background: #ffffff;
  padding: 20px;
  border-radius: 16px;
  box-shadow: 0 15px 35px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.job-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 45px rgba(0,0,0,0.15);
}

/* Job / Internship tag */
.job-tag {
  font-size: 13px;
  font-weight: 600;
  padding: 6px 14px;
  border-radius: 20px;
  display: inline-block;
  margin-bottom: 12px;
}

.job { background: #e5f0ff; color: #2255dd; }
.internship { background: #e6fffa; color: #0f766e; }

/* Text elements */
.job-title {
  font-size: 18px;
  font-weight: 600;
  color: #212529;
  margin-bottom: 6px;
}

.company-name {
  font-size: 14px;
  color: #555;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  gap: 6px;
}

.job-meta {
  font-size: 13px;
  color: #666;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.salary {
  font-weight: 500;
  color: #333;
  margin-bottom: 10px;
}

.skills {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-bottom: 12px;
}

.skill-tag {
  background: #eef2ff;
  color: #2255dd;
  padding: 5px 10px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 500;
}

.view-btn {
  align-self: flex-start;
  display: inline-block;
  margin-top: auto;
  color: #4361ee;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
}

.view-btn:hover {
  color: #3a0ca3;
  transform: translateY(-2px);
}

/* ===== Responsive for smaller screens ===== */
@media(max-width:768px) {
  .job-card {
    flex: 0 0 260px;
  }
}


    /* ===== MODAL ===== */
    .modal {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.6);
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      background: white;
      padding: 20px;
      width: 500px;
      border-radius: 12px;
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .close-btn {
      border: none;
      background: none;
      font-size: 22px;
      cursor: pointer;
    }

    /* ===== ANIMATIONS ===== */
    @keyframes drawLogo {
      0% { stroke-dashoffset: 300; }
      50% { stroke-dashoffset: 0; }
      100% { stroke-dashoffset: 300; }
    }

    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes bell {
      0% { transform: rotate(0); }
      50% { transform: rotate(10deg); }
      100% { transform: rotate(0); }
    }

    @media(max-width:768px) {
      .layout { flex-direction: column; }
      .sidebar { width: 100%; flex-direction: row; overflow-x: auto; }
    }


    .search-input {
  width: 320px;
  padding: 12px 18px;
  border-radius: 30px;
  border: none;
  outline: none;
  font-size: 14px;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.search-input::placeholder {
  color: #888;
}

.search-input:focus {
  width: 360px;
  box-shadow: 0 10px 30px rgba(67, 97, 238, 0.4);
}

.filter-buttons {
  display: flex;
  gap: 14px;
  margin-bottom: 30px;
  flex-wrap: wrap;
}

.filter-btn {
  padding: 10px 22px;
  border-radius: 25px;
  border: none;
  background: white;
  color: #333;
  font-weight: 500;
  cursor: pointer;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.12);
  transition: all 0.3s ease;
}

.filter-btn:hover {
  transform: translateY(-2px);
  background: linear-gradient(135deg, #4361ee, #3a0ca3);
  color: white;
}

.filter-btn.active {
  background: linear-gradient(135deg, #4361ee, #3a0ca3);
  color: white;
  box-shadow: 0 8px 25px rgba(67, 97, 238, 0.5);
}

  </style>
</head>

<body>

<!-- ===== HEADER ===== -->
<header>
  <div class="logo">
    <svg width="30" height="30" viewBox="0 0 100 100">
      <path d="M10 80 L50 20 L90 80 Z" stroke="black" stroke-width="5" fill="none"/>
    </svg>
    <span class="logo-text">Connect</span>
  </div>

  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      
       <li><a href="/student/logout">Log Out</a></li>


    </ul>
  </nav>
</header>

<div class="layout">

<!-- ===== SIDEBAR ===== -->
<aside class="sidebar">
  <div class="nav-section">
    <h4>Navigation</h4>
    <a href=" /student/mainpage" class="nav-item active"><i class="fa fa-home"></i> Dashboard</a>
    <a href="/dashboard" class="nav-item"><i class="fa fa-briefcase"></i> Recommendations</a>
    <a href="/student/resume" class="nav-item"><i class="fa fa-file"></i> Resume</a>
  </div>

  <div class="nav-section">
    <h4>Applications</h4>
    <a href="/student/applications" class="nav-item"><i class="fa fa-paper-plane"></i> My Applications</a>
    <a href="/student/chats" class="nav-item"><i class="fa fa-comments"></i> Chats</a>
  </div>

  
</aside>

      <!-- ===== Main Content ===== -->
      <div class="main-content">
        <!-- Banner -->
        <div class="welcome-banner">
          <h1>Welcome back, <%= student.name %>!</h1>
          <p>Discover amazing career opportunities in technology</p>
          <div class="banner-actions">
           <input 
      type="text" 
      id="searchInput" 
      class="search-input"
      placeholder="ðŸ” Search jobs, companies, skills..."
    >
          </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
          <div class="stat-card">
            <div>
              <h3>Active Jobs</h3>
              <p><%= totalJobs %></p>
            </div>
            <div class="stat-icon blue-icon"><i class="fa fa-briefcase"></i></div>
          </div>
          <div class="stat-card">
            <div>
              <h3>Internships</h3>
              <p><%= internships.length %></p>
            </div>
            <div class="stat-icon green-icon"><i class="fa fa-graduation-cap"></i></div>
          </div>
          <div class="stat-card">
            <div>
              <h3>Companies</h3>
              <p><%= companies.length %></p>
            </div>
            <div class="stat-icon orange-icon"><i class="fa fa-building"></i></div>
          </div>
        </div>

        <!-- Filter Buttons -->
        <div class="filter-buttons">
          <button class="filter-btn active" data-filter="all">All Opportunities</button>
          <button class="filter-btn" data-filter="job">Jobs Only</button>
          <button class="filter-btn" data-filter="internship">Internships Only</button>
        </div>

        <!-- Jobs Section -->
        <h2 class="section-header">Jobs</h2>
        <div class="jobs-container">
          <% job_postings.forEach(job => { %>
            <div class="job-card">
              <div class="job-tag job">Job</div>
              <div class="job-title"><%= job.job_title %></div>
              <div class="company-name"><i class="fa fa-building"></i> <%= job.company_name %></div>
              <div class="job-meta">
                <span>Work Arrangement: <%= job.work_arrangement %></span>
                <span>Location: <%= job.office_address %></span>
              </div>
              <div class="salary">
                <% if(job.salary_range) { %> Salary: <%= job.salary_range %> <% } %>
              </div>
              <div class="skills">
                <% if(job.skills) { job.skills.split(',').forEach(skill => { %>
                  <span class="skill-tag"><%= skill.trim() %></span>
                <% }) } %>
              </div>
              <a href="/job/<%= job.id %>" class="view-btn view-details" data-job-id="<%= job.id %>">View Details â†’</a>
            </div>
          <% }) %>
        </div>

        <!-- Internships Section -->
        <h2 class="section-header">Internships</h2>
        <div class="jobs-container">
          <% internships.forEach(intern => { %>
            <div class="job-card">
              <div class="job-tag internship">Internship</div>
              <div class="job-title"><%= intern.job_title %></div>
              <div class="company-name"><i class="fa fa-building"></i> <%= intern.company_name %></div>
              <div class="job-meta">
                <span>Work Arrangement: <%= intern.work_arrangement %></span>
                <span>Location: <%= intern.office_address %></span>
              </div>
              <div class="salary">
                <% if(intern.stipend_amount) { %> Stipend: <%= intern.stipend_amount %> <% } %>
              </div>
              <div class="skills">
                <% if(intern.skills) { intern.skills.split(',').forEach(skill => { %>
                  <span class="skill-tag"><%= skill.trim() %></span>
                <% }) } %>
              </div>
              <a href="/job/<%= intern.id %>" class="view-btn view-details" data-job-id="<%= intern.id %>">View Details â†’</a>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal" id="jobModal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Opportunity Details</h2>
        <button class="close-btn" onclick="closeModal()">Ã—</button>
      </div>
      <div class="company-details" id="modalContent"></div>
    </div>
  </div>

  
  <script>
  // ===== Filter Buttons =====
  const filterBtns = document.querySelectorAll('.filter-btn');
  const jobCards = document.querySelectorAll('.job-card');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      const filter = btn.dataset.filter;

      jobCards.forEach(card => {
        const type = card.querySelector('.job-tag').classList.contains('job')
          ? 'job'
          : 'internship';

        card.style.display =
          filter === 'all' || filter === type ? 'block' : 'none';
      });
    });
  });

  // ===== Modal =====
  const modal = document.getElementById('jobModal');
  const modalContent = document.getElementById('modalContent');
  const viewBtns = document.querySelectorAll('.view-details');

  viewBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const jobCard = btn.closest('.job-card');
      const title = jobCard.querySelector('.job-title').innerText;
      const company = jobCard.querySelector('.company-name').innerText;
      const meta = jobCard.querySelector('.job-meta').innerHTML;
      const salary = jobCard.querySelector('.salary').innerText;
      const skills = jobCard.querySelector('.skills').innerHTML;

      modalContent.innerHTML = `
        <h3>${title}</h3>
        <p><strong>${company}</strong></p>
        <div>${meta}</div>
        <div>${salary}</div>
        <div>Skills: ${skills}</div>
      `;

      modal.style.display = 'flex';
    });
  });

  function closeModal() {
    modal.style.display = 'none';
  }

  window.addEventListener('click', e => {
    if (e.target === modal) closeModal();
  });

  // ===== SEARCH FUNCTIONALITY =====
  const searchInput = document.getElementById("searchInput");

  searchInput.addEventListener("keyup", function () {
    const value = this.value.toLowerCase();

    jobCards.forEach(card => {
      const title = card.querySelector(".job-title").innerText.toLowerCase();
      const company = card.querySelector(".company-name").innerText.toLowerCase();
      const skills = card.querySelector(".skills").innerText.toLowerCase();

      card.style.display =
        title.includes(value) ||
        company.includes(value) ||
        skills.includes(value)
          ? "block"
          : "none";
    });
  });
</script>

</body>
</html>
